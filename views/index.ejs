<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post" >
          <input
            class="text-zinc-200 block w-full px-5 py-2 bg-zinc-800"
            type="text"
            placeholder="titlte goes here "
            name="topic"
          />
          <textarea
            class="text-zinc-200 block w-full mt-2 px-5 py-2 bg-zinc-800"
            placeholder="here you will write "
            name="detail"
          ></textarea>
          <input
            class="bg-blue-600 text-zinc-200 mt-2 px-5 py-2 rounded-md"
            type="submit"
            value="create task"
          />
        </form>
      </div>
      <div class="task flex gap-3 flex-wrap p-10">

        <% if(files.length > 0) { %>
          <% files.forEach(function(val) { %>
            <div class="task w-72 px-3 py-4 bg-zinc-800">
              <h1 class="text-white text-3xl tracking-tighter">
                <%=val %>
                </h1>
                <a class="text-blue-500 inline-block mt-3" href="/files/<%= val %>" >read more</a>
                <a class="text-white" href="/delet/<%= val %>">delet</a>
          
            </div>    
          <% }) %>
          <% } else { %>
            <h3 class = 'text-zinc-200'> there is no topic</h3>      
          <% } %>

         </div>
    </div>
  </body>
</html>
